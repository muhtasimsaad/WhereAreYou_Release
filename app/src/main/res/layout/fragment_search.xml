<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context="com.example.muhta.whereareyou.search">

<!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/colorTheme"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Search a friend"
                android:padding="0dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                 android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/headerImageSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    app:srcCompat="@drawable/search" />

                <EditText
                    android:id="@+id/headerTextSearch"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="Search..."
                    android:textColor="@android:color/background_dark"
                      />
            </LinearLayout>




        </LinearLayout>

        <ListView
            android:background="@color/colorContrast"
            android:id="@+id/listViewSearch"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"></ListView>

    </LinearLayout>

</FrameLayout>
