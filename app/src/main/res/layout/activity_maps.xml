<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mother"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.muhta.whereareyou.MapsActivity">

    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.example.saad.whereareu.MapsActivity"></fragment>


    <Button
        android:id="@+id/search_buttom2"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="21dp"

        android:layout_toLeftOf="@+id/logout2"
        android:layout_toStartOf="@+id/logout2"
        android:background="@drawable/glass"
        android:text=" "
        android:visibility="invisible" />

    <TextView
        android:id="@+id/logout2"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="" />

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:background="@color/accent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout2"
        android:layout_alignLeft="@+id/search_buttom2"
        android:layout_alignStart="@+id/search_buttom2"
        android:layout_toLeftOf="@+id/logout2"
        android:gravity="center|top"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_buttom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/glass"

            android:text=" "

            />


        <Button
            android:id="@+id/accounts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/accounts"

            android:text=" " />

        <Button
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"

            android:background="@drawable/settings"
            android:text=" " />

        <Button
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/logout"
            android:text=" " />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="5dp" />

    </RelativeLayout>
</RelativeLayout>